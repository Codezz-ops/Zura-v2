class Math {
    init() {
        this.pi   = 3.141592653589793;
        this.fact = this.fact;
        this.pow  = this.pow;
        this.abs  = this.abs;
        this.floor = this.floor;
        this.ceil = this.ceil;
    }
    fact(n)   { 
        if (n == 0) return 1; 
        else return n * this.fact(n - 1);   
    }
    pow(x, n) { 
        if (n == 0) return 1; 
        else return x * this.pow(x, n - 1); 
    }
    abs(x) { 
        if (x < 0) return -x; 
        else return x; 
    }

    floor(x) {
        return x - this.abs(x % 1);
    }

    ceil(x) {
        if (x % 1 == 0) return x;
        else return x + 1 - this.abs(x % 1);
    }

}

class Test extends Math {
    test() {
        return this.fact(5);
    }
}

have math := Math();
have test := Test();
