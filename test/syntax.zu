fn for_loop() {
    have start := clock();
    sleep(5); // Sleep is in seconds
    info "Slept for " + toString(clock() - start) + " seconds";
    while (have i := 0; i < 30) : (i = i + 1) {
        info "i is " + toString(i);
    }
}

fn while_loop() {
    while (true) {
        info "Hello world!"
    }
}

fn while_loop_param() {
    have i := 0;
    while (true) : (i = i + 1) {
        info i;
        if (i == 1000) exit(1);
    }
}

class Test {
    init(coffee) {
        this.coffee = coffee;
    }

    brew() {
        info "Brewing " + this.coffee;

        this.coffee = nil;
    }
}

class Test2 extends Test {
    init(coffee) {
        super.init(coffee);
    }

    brew() {
        info "Brewing " + this.coffee + " with milk";

        this.coffee = nil;
    }
}

fn main() {
    have test := Test("Espresso");
    test.brew();

    have test2 := Test2("Espresso");
    test2.brew();
}

fn math(a, b, op) {
    match (op) {
        case "+":  return;
        case "-":  return a - b;
        case "*":  return a * b;
        case "/":  return a / b;
        case "%":  return a % b;
        case "**": return a**b;
    default:
        info "Unknown operator " + op;
    }
}

